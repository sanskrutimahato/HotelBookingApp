<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FAFAFA"
    tools:context=".BookingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:title="Booking"
        app:titleTextColor="@android:color/white"/>

    <!-- Hotel Image with Overlay -->
    <FrameLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room6" />

        <!-- Dark Overlay for Text Visibility -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

        <!-- Hotel Info (Overlay on Image) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"/>

            <TextView
                android:id="@+id/hotelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Address"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/hotelRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 4.5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFD700"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="Hotel Booking"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333"
        android:paddingBottom="10dp"/>

    <!-- Guest Name Input -->
    <EditText
        android:id="@+id/guestName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Your Name"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000"
        android:textSize="16sp"
        android:inputType="textPersonName" />

    <!-- Phone Number Input -->
    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Your Phone Number"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_marginTop="10dp" />

    <!-- Check-in & Check-out Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingTop="10dp">

        <!-- Check-in Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-in Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#555"/>

            <TextView
                android:id="@+id/checkInDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:text="Select Check-in Date"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Check-out Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-out Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#555"/>

            <TextView
                android:id="@+id/checkOutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:text="Select Check-out Date"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Number of Guests Dropdown -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Number of Guests"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#555"/>

        <Spinner
            android:id="@+id/numGuests"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"/>
    </LinearLayout>

    <!-- Booking Button -->
    <Button
        android:id="@+id/bookButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Book Now"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        android:textColor="#FFF"
        android:padding="12dp"
        android:layout_marginTop="50dp"/>
</LinearLayout>
