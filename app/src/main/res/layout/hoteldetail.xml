<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            app:title="Hotel Details"
            app:titleTextColor="@android:color/white"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="360dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/royalorchid"
                    android:clickable="true"
                    android:focusable="true">


                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/room1" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Royal Orchid ⭐⭐⭐⭐☆ "
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Civil Lines, Nagpur, Maharashtra 440001"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free WiFi, Pool, Gym"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹4,500/night"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/grandhorizon"
                    android:clickable="true"
                    android:focusable="true">


                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/rooms2" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Grand Horizon ⭐⭐⭐⭐⭐"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sadar, Nagpur, Maharashtra 440001"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rooftop Restaurant, Spa, Bar, Free Parking"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹7,200/night"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                </LinearLayout>




                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/orangecity"
                    android:clickable="true"
                    android:focusable="true">


                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/room6" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Orange City Inn ⭐⭐⭐☆☆"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dharampeth, Nagpur, Maharashtra 440010"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complimentary Breakfast, AC Rooms, Business Center"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹2,500/night"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sapphLayout"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">


                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/room5" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Sapphire Bay ⭐⭐⭐⭐☆"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wardha Road, Nagpur, Maharashtra 440015"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conference Rooms, Swimming Pool, Bar"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹5,600/night"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lakeview"
                    android:clickable="true"
                    android:focusable="true">


                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/room4" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Lakeview Residency ⭐⭐⭐⭐☆"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ambazari Road, Nagpur, Maharashtra 440033"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pet-friendly, Garden Area, Free WiFi"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹3,800/night"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        />


                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
